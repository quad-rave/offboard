def start_missions():
    rospy.init_node('destroyer')
    rate = rospy.Rate(10)

    # define the UAV objects
    uavs = []
    for i in range(3):
        uav = UAV("uav" + str(i))
        uavs.append(uav)
    time.sleep(5)

    # define a mission and assign it to uavs
    member_mission = TriangleMember()
    member_mission.uav_count = 3 #                               20                10  10
    member_mission.point_cloud = [np.array([0,0,5]), np.array([0,10, 5]), np.array([10, 10,5])]

    member_mission.uav_id = 0
    uavs[0].assign_mission(member_mission, "uav0")

    member_mission.uav_id = 1
    uavs[1].assign_mission(member_mission, "uav1")

    member_mission.uav_id = 2
    uavs[2].assign_mission(member_mission, "uav2")

    time.sleep(2)
    input()
    return



if __name__ == '__main__':
    try:
        start_missions()
    except rospy.ROSInterruptException:
        pass

